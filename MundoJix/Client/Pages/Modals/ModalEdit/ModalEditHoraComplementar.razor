
@if (DisplayForm)
{

    <div class="modal-backdrop show"></div>

    <div class="modal fade show" id="ModalAplicacao" tabindex="-1" role="form" aria-labelledby="Forms"
         aria-hidden="true" style="display: block;">

        <div class="modal-dialog" role="document">

            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">@Titulo</h5>
                    <button @onclick="@onCancel" type="button" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <MundoJix.Client.Pages.HorasComplementares.FormHoraComplementar horasComplementares="@horasComplementares" alunos="@alunos"></MundoJix.Client.Pages.HorasComplementares.FormHoraComplementar>
                </div>

                <div class="modal-footer">
                    <button onclick="@onCancel" type="button" class="btn btn-danger">Cancelar</button>
                    <button onclick="@onConfirm" type="button" class="btn btn-primary">Editar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    @using MundoJix.Shared.Models
    private bool DisplayForm = false;
    [Parameter] public string Titulo { get; set; }
    [Parameter] public int id { get; set; }
    [Parameter] public HorasComplementares horasComplementares { get; set; }
    [Parameter] public List<Aluno> alunos { get; set; }
    [Parameter] public EventCallback onConfirm { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }

    public void Show()
    {
        DisplayForm = true;
    }

    public void Hide()
    {
        DisplayForm = false;
    }
}

